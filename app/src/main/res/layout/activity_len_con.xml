<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/CustomBackgroundStyle"
    tools:context=".LenConActivity">
    <!--    this is the toolbar to show the menu-->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <LinearLayout
        style="@style/lenConvertPage"
        android:id="@+id/linearLayout1"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/popup1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:textSize="20dp"
                android:gravity="left"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:onClick="onPopUp"
                app:layout_constraintTop_toTopOf="@+id/linearLayout1" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:onClick="onPopUp"
                android:layout_gravity="center"
                android:background="@drawable/arrow_right_24"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textView1"
            android:layout_marginTop="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textAlignment="viewEnd"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:textColor="@color/btnBackground2"
            android:textIsSelectable="true"
            android:gravity="center"
            android:textSize="22dp"/>
    </LinearLayout>
    <LinearLayout
        style="@style/lenConvertPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout1">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/popup2"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:textSize="20dp"
                android:gravity="left"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:onClick="onPopUp"
                app:layout_constraintTop_toTopOf="@+id/linearLayout1" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:onClick="onPopUp"
                android:layout_gravity="center"
                android:background="@drawable/arrow_right_24"/>
        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_marginTop="5dp"
            android:paddingHorizontal="15dp"
            android:textAlignment="viewEnd"
            android:gravity="center"
            android:textIsSelectable="true"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:textSize="22dp"/>
    </LinearLayout>



    <!--    buttons-->
    <LinearLayout
        android:id="@+id/linearLayoutVertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/linearLayoutHorizontal2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn7"
                style="@style/digitButton"
                android:onClick="onDigitClick2"
                android:text="7" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn8"
                style="@style/digitButton"
                android:onClick="onDigitClick2"
                android:text="8" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn9"
                style="@style/digitButton"
                android:onClick="onDigitClick2"
                android:text="9" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAC"
                style="@style/operatorButton"
                android:onClick="onACClick"
                android:text="AC"
                android:textSize="16dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutHorizontal3"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn4"
                style="@style/digitButton"
                android:onClick="onDigitClick2"
                android:text="4" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn5"
                style="@style/digitButton"
                android:onClick="onDigitClick2"
                android:text="5" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn6"
                style="@style/digitButton"
                android:onClick="onDigitClick2"
                android:text="6" />

            <com.google.android.material.button.MaterialButton

                android:id="@+id/btnBack"
                style="@style/backSpace2"
                android:onClick="onBackClick" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutHorizontal4"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn1"
                style="@style/digitButton"
                android:onClick="onDigitClick2"
                android:text="1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn2"
                style="@style/digitButton"
                android:onClick="onDigitClick2"
                android:text="2" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn3"
                style="@style/digitButton"
                android:onClick="onDigitClick2"
                android:text="3" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnX"
                style="@style/digitButton"
                android:background="@android:color/transparent" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutHorizontal5"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDot"
                style="@style/digitButton"
                android:onClick="onDigitClick2"
                android:text="." />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn0"
                style="@style/digitButton"
                android:onClick="onDigitClick2"
                android:text="0" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEqual"
                style="@style/operatorButton"
                android:layout_width="154dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal|top"
                android:onClick="onEqualClick"
                android:paddingTop="5dp"
                android:text="="
                android:textSize="40dp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCopy"
        style="@style/copyClick"
        android:layout_width="60dp"
        android:layout_gravity="center"
        android:layout_height="36dp"
        android:iconTint="@color/btnBackground2"
        android:onClick="onCopyClick"

        app:layout_constraintBottom_toTopOf="@+id/linearLayoutVertical"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>