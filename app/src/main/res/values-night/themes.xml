<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CalX" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="txtBg">
        <item name="android:background">#212121</item>
    </style>
    <color name="settinglayout">#212121</color>
    <style name="disableButton">
        <item name="android:textColor">#838383</item>
    </style>
    <style name="signButton">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="enableButton">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="settings">
        <item name="cornerRadius">18dp</item>
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="background">@color/convertBG</item>
    </style>
    <style name="lenConvertPage">
        <item name="cornerRadius">18dp</item>
        <item name="android:background">@drawable/rounded_corners</item>
        <item name="background">@color/convertBG</item>
    </style>
    <style name="Base.Theme.CalX.Fullscreen" parent="Base.Theme.CalX">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="aboutSettings">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

       <style name="CustomBackgroundStyle">
        <item name="android:background">@color/black</item>
    </style>

    <style name="CustomBackgroundStyleSettings">
        <item name="android:background">@color/black</item>
    </style>

    <style name="changeDigit_tv1">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="changeDigit_tv2">
        <item name="android:textColor">#A8A8A8</item>
    </style>


    <style name="operatorButton" parent="commonButton">
        <item name="android:backgroundTint">@color/btnBackground2</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text">
        <item name="android:textColor">@color/btnBackground</item>
    </style>

    <style name="Text2">
        <item name="android:textColor">#A8A8A8</item>
    </style>

    <style name="view">
        <item name="background">@color/black</item>
    </style>

<style name="view2">
    <item name="backgroundColor">@color/white</item>
</style>

    <style name="digitButton" parent="commonButton">
        <item name="android:textColor">@color/btnBackground</item>
    </style>

    <style name="moreButton">
        <item name="backgroundTint">@color/black</item>\
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="digitButton2" parent="commonButton">
        <item name="android:textColor">@color/btnBackground</item>
        <item name="android:backgroundTint">#2E2D2D</item>
    </style>

    <style name="backSpace" >
        <item name="android:drawableLeft">@drawable/baseline_backspace_23</item>
        <item name="android:backgroundTint">@color/black</item>
    </style>
    <style name="copyClick" >
        <item name="android:drawableLeft">@drawable/rounded_content_copy_23</item>
        <item name="android:backgroundTint">@color/black</item>
    </style>
    <style name="backSpace2" parent="digitButton2">
        <item name="android:drawableLeft">@drawable/baseline_backspace_23</item>
        <item name="android:backgroundTint">#2E2D2D</item>
    </style>
    <style name="btnBack" parent = "digitButton2">
        <item name="android:drawableLeft">@drawable/baseline_backspace_23</item>
    </style>

    <style name="commonButton" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_height">65dp</item>
        <item name="backgroundTint">#616161</item>
        <item name="cornerRadius">34dp</item>
        <item name="android:textSize">32dp</item>
        <item name="android:layout_margin">12dp</item>
    </style>

    <style name="PopupMenu" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/black</item>
    </style>

    <color name="strikeLine">#E7E7E7</color>
</resources>